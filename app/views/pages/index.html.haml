%h1.page-header Pages
%table#page{:class => "table table-hover"}
  %tr
    %th Type
    %th Title
    %th Path
    %th Created At
    %th Updated At
    %th View Page
    %th Edit Page
  - @pages.each do |page|
    %tr{:id => "page-#{page.id}"}
      %td #{page.type}
      %td #{page.title}
      %td #{page.path}
      %td #{page.created_at}
      %td #{page.updated_at}
      %td= link_to "View #{page.title}", page_path(page.id)
      %td= link_to "Edit #{page.title}", edit_page_path(page.id)

%div.btn-group
  = link_to 'Add new page', new_page_path
  = link_to 'Add new petition', new_page_path(:page_type => :petition)
  = link_to 'Add new event', new_page_path(:page_type => :event)

