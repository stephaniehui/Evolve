= form_for page, url: {action: page_method} do |form|
  = form.label :title, 'Title:'
  = form.text_field :title
  %br
  = form.label :path, 'Path:'
  = form.text_field :path
  %br
  = form.label :content, 'Content:'
  = form.cktext_area :content, :ckeditor => {:toolbar=>'Full', :width=>'400px', :height=>'200px'}
  %br
  = form.label :content_type, 'Content Type:'
  = form.text_field :content_type
  %br
  = form.label :description, 'Description:'
  = form.text_field :description
  %br
  = form.label :published, 'Published:'
  = form.check_box :published
  %br
  = form.submit
= link_to 'Cancel', page_index_path
- if ! page.new_record?
  = button_to "Delete page", page, :confirm => 'Are you sure?', :method => :delete